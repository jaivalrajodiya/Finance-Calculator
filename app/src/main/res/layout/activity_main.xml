<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg" />

            <ImageView
                android:id="@+id/emical_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="-45dp"
                android:adjustViewBounds="true"
                android:src="@drawable/emi" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/SWPCalculator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_img"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/swp" />

                <ImageView
                    android:id="@+id/CumulativeCal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_img"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/price" />


            </LinearLayout>

            <ImageView
                android:id="@+id/CompoundInterest_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/compund" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/Buget_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_img"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/motrage" />

                <ImageView
                    android:id="@+id/Retirement_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_img"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/reterimet" />


            </LinearLayout>

            <ImageView
                android:id="@+id/profitratio_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profilabity" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/LoanRepaymet_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_img"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/debtpayoff" />

                <ImageView
                    android:id="@+id/LiquidityRatios_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_img"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/loaneliblity" />


            </LinearLayout>

            <ImageView
                android:id="@+id/LoanComparisonCal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/compareloan" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>